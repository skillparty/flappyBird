    this.scene.restart();
    return;
  }
  
  if (!gameStarted) {
    gameStarted = true;
    console.log('Game started!');
    
    // Remove menu elements with smooth fade out
    const titleElements = bird.getData('titleElements');
    if (titleElements) {
      titleElements.forEach((element: any) => {
        this.tweens.add({
          targets: element,
          alpha: 0,
          duration: 300,
          ease: 'Power2',
          onComplete: () => {
            element.destroy();
          }
        });
      });
    }
